<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Add partner group name after parner name at form view-->
    <record model="ir.ui.view" id="addval-contacts-custom.group-name">
      <field name="name">partner.group.name.inherited</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="company_name" position="after">
          <label for="partner_group_name" string="Grupo" />
          <field name="partner_group_name"/>
        </field>
      </field>
    </record>

    <!-- Add OC requirement at electronic invoicing notebook-->
    <record model="ir.ui.view" id="addval-contacts-custom.group-name">
      <field name="name">partner.group.name.inherited</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="l10n_cl_dte_email" position="after">
          <label for="requires_OC" string="Requiere Orden de Compra" />
          <field name="requires_OC"/>
        </field>
      </field>
    </record>
